{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

    <main class="container">
        <div class="row">
            <div class="card mt-3 p-3">
            <h2>Formulaire de contact</h2>
            <article class="mt-3">
                {{ form_start(form) }}
                    <div class="mt-3">   
                        {{ form_row(form.firstName) }}
                        {{ form_row(form.lastName) }}
                    </div>
                    <p class="mt-3">
                        {{ form_row(form.email) }}
                    </p>
                    <p class="mt-3">
                        {{ form_row(form.subject) }}
                    </p>
                    <p class="mt-3">
                        {{ form_row(form.message) }}
                    </p>
                    <p>
                        <button type="submit" class="btn btn-primary mt-3 btn-lg">Envoyer le message</button>
                    </p>
                {{ form_end(form) }}
            </article>
            </div>
        </div>
        

    </main>

    {% include "_parts/_footer.html.twig" %}

{% endblock %}
