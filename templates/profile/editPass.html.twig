{% extends 'base.html.twig' %}

{% block title %} Modification du profil {% endblock %}

{% block body %}
    {% include '_parts/_forumHeader.html.twig' %}

    <main class="container h-100">
        <div class="mt-3 text-center">
            <span class="backgroundTitle h2 px-3 rounded">Modifier mon mot de passe</span>
        </div>
        <section class="mt-3 card">
            <div class="card-body">
                {{ form_start(form) }}
                    {{ form_row(form.plainPassword) }}
                    {{ form_row(form.newPassword) }}
                    <button type="submit" class="btn btnSend mt-4 btn-lg">Modifier le mot de passe</button>
                {{ form_end(form) }} 
            </div>
        </section> 

        <div class="mt-4">
            <a href="{{ path('profile_index') }}" class="btn btnReturn">Retour au profil</a>
        </div>   
    </main>

    {% include "_parts/_footer.html.twig" %}

{% endblock %}