{% extends "base.html.twig" %}


{% block title %}Forum Articles{% endblock %}

{% block body %} 

    {% include "_parts/_forumHeader.html.twig" %}
    <section class="container">
        <h1>Forum articles</h1>

        <h2>Liste tes articles existants</h2>

        <p>
            <ul>
                {% for article in articles %}
                    <a href="{{ path('articles_app_article_show', { "title": article.title})|lower }}"><li>{{ article.title }}</li></a>
                {% endfor %}  
            </ul>
        </p>
    </section>
    

{% endblock %}

