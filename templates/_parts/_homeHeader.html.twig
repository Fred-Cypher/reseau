<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid flex-column col-9">
            <div class="row col-12">
                <div class="col-3 align-self-center">
                    <a href="{{ path('main') }}">
                        <p>Logo Réseau / Accueil</p>
                    </a>
                </div>
                <div class="col-9 text-center">
                    <h1>Réseau social</h1>
                    <p>Bienvenue sur notre réseau social</p>
                </div>
            </div>
            
            <div class="navbar-nav">
                <ul class="nav">
                    {% if app.user %}
                    <li class="nav-item ms-2">
                            <a class="nav-link" href="{{ path('forum_index') }}">Accès au forum</a>
                        </li>
                        <li class="nav-item ms-2">
                            <a class="nav-link" href="{{ path('profile_index') }}">Mon compte</a>
                        </li>
                        <li class="nav-item ms-2">
                            <a class="nav-link" href="{{ path('app_logout') }}">Me déconnecter</a>
                        </li>
                    {% else %}
                        <li class="nav-item ms-2">
                            <a class="nav-link" href="{{ path('app_login') }}">Me connecter</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>

        <div class="col-3 align-self-end">
            {% if app.user %}
                Compte : {{ app.user.nickname }}
            {% else %}
                Aucun utilisateur connecté
            {% endif %}
        </div>
    </nav>

</header>