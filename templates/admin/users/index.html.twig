{% extends 'base.html.twig' %}

{% block title %}Modération des utilisateurs{% endblock %}

{% block body %}

    {% include "_parts/_forumHeader.html.twig" %}

    <main class="container">
        <h2 class="mt-3">Liste des utilisateurs à modérer</h2>

        <p class="m-3 d-flex justify-content-end">
            <a href="{{ path('admin_index') }}" class="btn btn-warning">Retour au panneau de modération</a>
        </p>

        <section class="row">
            <table class="table table-striped mt-5">
                <thead>
                    <th>Id</th>
                    <th>Pseudo</th>
                    <th>Email</th>
                    <th>Vérifié</th>
                    <th>Rôle(s)</th>
                    <th>Actions</th>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.nickname }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.isVerified }}</td>
                            <td>{{ user.roles|json_encode() }}</td>
                            <td>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked{{ user.id }}" {{ (user.isEnabled) ? 'checked' : '' }} data-id="{{ user.id }}">
                                    <label class="form-check-label" for="flexSwitchCheckChecked{{ user.id }}"></label>
                                </div>
                            {{ user.isEnabled }}</td>
                            <td>
                                <a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="btn btn-warning">Modifier</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody> 
            </table>

            <p class="m-3 d-flex justify-content-end">
                <a href="{{ path('admin_index') }}" class="btn btn-warning">Retour au panneau de modération</a>
            </p>
        </section>
    </main>

    <script src="{{ asset('assets/js/scriptsUsers.js') }}"></script>

{% endblock %}
