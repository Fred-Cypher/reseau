{% extends "base.html.twig" %}

{% block title %}Forum{% endblock %}

{% block body %} 

    {% include "_parts/_forumHeader.html.twig" %}

    <main class="container">
        <div class="row">

            {% if app.user %}
                {% if app.user.isEnabled %}
                    <h2>Choix du forum </h2>

                    <div class="row">
                        <div class="col-sm-6 mt-4">
                            <div class="card">
                                <div class="card-body">
                                    <p class="card-title h5">Forum Images</p>
                                    <p class="card-text mt-2">Exemple d'image (miniature) random postée sur le forum d'images.</p>
                                    <p class="text-center mt-5">
                                        <a href="{{ path('images_app_blog_images_index') }}" class="btn btn-primary">Forum images</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 mt-4">
                            <div class="card">
                                <div class="card-body">
                                    <p class="card-title h5">Forum Articles</p>
                                    <p class="card-text mt-2">Exemple d'article (une partie) random posté sur le forum d'articles</p>
                                    <p class="text-center mt-5">
                                        <a href="{{ path('articles_app_articles') }}" class="btn btn-primary">Forum articles</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                {% else %}

                    <div class="row">
                        <div class=" col-8 mt-5 mx-auto">
                            <div class="card">
                                <div class="card-body text-center">
                                    <p class="card-title h2 text-danger font-weight-bold">Message d'avertissement</p>
                                    <p class="card-text mt-5">Votre compte a été désactivé par un administrateur.</p>
                                    <p class="card-text mt-2 mb-4">Pour le réactiver, veuillez contacter un administrateur.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                {% endif %}
            {% else %}

            <div class="row">
                        <div class=" col-8 mt-5 mx-auto">
                            <div class="card">
                                <div class="card-body text-center">
                                    <p class="card-title h1 text-danger font-weight-bold">Accès interdit</p>
                                    <p class="card-text mt-2 mb-4">Inscrivez-vous et connectez-vous pour avoir accès à cette partie du forum.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                
            {% endif %}
        </div>
    </main>
    
    {% include "_parts/_footer.html.twig" %}

{% endblock %}