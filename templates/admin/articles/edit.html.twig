{% extends 'base.html.twig' %}

{% block title %}Admin - Modification d'un article{% endblock %}

{% block body %}

    {% include "_parts/_forumHeader.html.twig" %}

    <section class="container">
        <h2 class="mt-3">Modifier un article</h2>
        
        <article class="mt-3">
            <p class="row">
                <div>Visibilité : </div>
                <div class="form-check form-switch">
                    <label class="form-check-label" for="flexSwitchCheckChecked"></label>
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" {{ (article.isVisible) ? 'checked' : '' }} data-id="{{ article.id }}">
                </div>
            </p>
            {{ form_start(form) }}
                {{ form_row(form.title) }}
                {{ form_row(form.summary) }}
                {{ form_row(form.content) }}
            {{ form_end(form) }}
            <button type="submit" class="btn btn-primary mt-3 btn-lg">Modifier l'article</button>
            <p class="m-3 d-flex justify-content-end">
                <a href="{{ path('admin_index') }}" class="btn btn-warning">Retour au panneau de modération</a>
            </p>
        </article>
    </section>


{% endblock %}