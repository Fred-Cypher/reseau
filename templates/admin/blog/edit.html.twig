{% extends "base.html.twig" %}

{% block title %}Admi - Modification d'une image {% endblock title %}

{% block body %}

    {% include "_parts/_forumHeader.html.twig" %}

    <main class="container">
        <h2 class="mt-3">Modifier une image</h2>

        <article class="mt-2 col-12 col-md-8 p-3 m-auto card">
            <img class="img-thumbnail modifPicture m-auto" src="{{ vich_uploader_asset(image, 'imageFile') }}" alt="{{ image.title }}">
            {{ form_start(form) }}
                <div class="mt-2 p-2">
                    {{ form_row(form.title) }}
                </div>
                <div class="mt-2 p-2">
                    {{ form_row(form.description) }}
                </div>
                <div class="mt-2 p-2">
                    {{ form_row(form.isVisible) }}
                </div>
                    {{ form_row(form.image_url) }}
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btnSend mt-2 btn-lg">Modifier l'image</button>
                </div>
            {{ form_end(form) }}
        </article>

        <div class="backTo">
            <p class="m-3 d-flex justify-content-end">
                <a href="{{ path('images_app_blog_images_index') }}" class="btn btnReturn me-4">Aller à la liste d'images du forum</a>
                <a href="{{ path('admin_index') }}" class="btn btn-warning">Retour au panneau de modération</a>
            </p>
        </div>
    </main>

    {% include "_parts/_footer.html.twig" %}

    <script src="{{ asset('assets/js/scriptsBlog.js') }}"></script>
    
{% endblock %}