{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}

    {% include "_parts/_homeHeader.html.twig" %}

    <section class="container my-5 card p-3">
        <div class="row">
            <div class="col">
                <h1>Réinitialisation du mot de passe</h1>
                {{ form_start(requestPassForm) }}
                    {{ form_row(requestPassForm.email) }}
                    <button type="submit" class="btn btnSend mt-3">Envoyer</button>
                {{ form_end(requestPassForm) }}
            </div>
        </div>
    </section>

    {% include "_parts/_footer.html.twig" %}

{% endblock %}
