{% extends 'base.html.twig' %}

{% block title %}Admin - Données privées{% endblock %}

{% block body %}

    {% include '_parts/_forumHeader.html.twig' %}

    <main class="container">
        <h2 class="mt-3">Données privées des utilisateurs</h2>
        <h3 class="text-danger font-weight-bolder">À ne pas diffuser</h3>

        <p class="m-3 d-flex justify-content-end">
            <a href="{{ path('admin_index') }}" class="btn btn-warning">Retour au panneau de modération</a>
        </p>

        <section class="row">
            {% if is_granted ('ROLE_ADMIN') %}
                <table class="table table-sm table-striped mt-3">
                    <thead>
                        <th>Id</th>
                        <th>Prénom</th>
                        <th>Nom</th>
                        <th>Pseudo</th>
                        <th>Email</th>
                    </thead>
                    <tbody> 
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td class="text-capitalize">{{ user.firstname }}</td>
                                <td class="text-capitalize">{{ user.lastname }}</td>
                                <td>{{ user.nickname}}</td>
                                <td>{{ user.email }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p class="fs-4 text-danger font-weight-bold">Vous n'avez pas le droit de lire ces informations</p>
            {% endif %}
        </section>
    
    </main>
    
{% endblock %}