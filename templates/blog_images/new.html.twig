{% extends 'base.html.twig' %}

{% block title %}Nouvelle image{% endblock %}

{% block body %}

    {% include "_parts/_forumHeader.html.twig" %}

    <main class="container">
        <div class="row">
            <div class="col">
                <h1>Enregistrer une nouvelle image</h1>

                <article class="mt-3">
                    {{ form_start(form) }}
                        <p class="mt-3">
                            {{ form_row(form.title) }}
                        </p>
                        <p class="mt-3">
                            {{ form_row(form.image_url) }}
                        </p>
                        <p class="mt-3">
                            {{ form_row(form.description) }}
                        </p>
                        <p class="mt-3">
                            Auteur du post : {{ app.user.nickname }}
                        </p>
                        <p>
                            <button type="submit" class="btn btn-primary mt-3 btn-lg">Enregistrer l'image</button>
                        </p>
                    {{ form_end(form) }}

                    <a href="{{ path('images_app_blog_images_index') }}" class="btn btn-secondary">Retour Ã  la liste d'images</a>
                </article>
            </div>
        </div>
    </main>
    
    {% include "_parts/_footer.html.twig" %}

{% endblock %}
