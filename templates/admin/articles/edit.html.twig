{% extends 'base.html.twig' %} 

{% block title %}Admin - Modification d'un article{% endblock %}

{% block body %}

    {% include "_parts/_forumHeader.html.twig" %}

    <main class="container">
        <h2 class="mt-3">Modifier un article</h2>
        
        <article class="mt-2 col-12 col-md-8 p-3 m-auto card">
            {{ form_start(form) }}
                <div class="mt-2 p-2">
                    {{ form_row(form.title) }}
                </div>
                <div class="mt-2 p-2">
                    {{ form_row(form.summary) }}
                </div>
                <div class="mt-2 p-2">
                    {{ form_row(form.content) }}
                </div>
                <div class="mt-2 p-2">
                    {{ form_row(form.isVisible) }}
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary mt-3 btn-lg">Modifier l'article</button>
                </div>
            {{ form_end(form) }}
        </article>
        
        <p class="m-3 d-flex justify-content-end">
                <a href="{{ path('admin_index') }}" class="btn btn-warning">Retour au panneau de mod√©ration</a>
            </p>
    </main>

    <script src="{{ asset('assets/js/scriptsArticles.js') }}"></script>


{% endblock %}