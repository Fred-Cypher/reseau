{% extends "base.html.twig" %}

{% block title %}Admi - Modification d'une image {% endblock title %}

{% block body %}

    {% include "_parts/_forumHeader.html.twig" %}

    <main class="container">
        <h2 class="mt-3">Modifier une image</h2>

        <article class="mt-3">
            <p class="row">
                <div>Visibilité : </div>
                <div class="form-check form-switch">
                    <label class="form-check-label" for="flexSwitchCheckChecked"></label>
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" {{ (image.isVisible) ? 'checked' : '' }} data-id="{{ image.id }}">
                </div>
            </p>
            <img class="img-thumbnail modifPicture" src="{{ vich_uploader_asset(image, 'imageFile') }}" alt="{{ image.title }}">
            {{ form_start(form) }}
                {{ form_row(form.title) }}
                {{ form_row(form.description) }}
                {{ form_row(form.image_url) }}
                <button type="submit" class="btn btn-primary mt-3 btn-lg">Modifier l'image</button>
            {{ form_end(form) }}
        </article>

        <p class="mt-3 d-flex justify-content-end">
            <a href="{{ path('admin_index') }}" class="btn btn-warning">Retour au panneau de modération</a>
        </p>
    </main>

    <script src="{{ asset('assets/js/scriptsBlog.js') }}"></script>
    
{% endblock %}