<header>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <div class="row col-12 col-md-3 text-center">
                <div class="border">
                    <a href="{{ path('main') }}">
                        <img src=" {{ asset('assets/icons/globe.ico') }}" alt="Logo site" class="logo">
                        <p class="mt-1">Page d'accueil du site</p>
                    </a>
                </div>
            </div>

            <div class="col-12 col-md-6 text-center">    
                <div  class="mt-2">
                    <h1>Réseau social</h1>
                    <p>Bienvenue sur la partie privée notre réseau social</p>
                </div>

                <div class="navbar-nav">
                    <ul class="nav w-100 justify-content-center flex-column flex-md-row">
                        {% if app.user %}
                            <li class="nav-item ms-2">
                                <a class="nav-link" href="{{ path('forum_index') }}">Retour à l'accueil du forum</a>
                            </li>
                            <li class="nav-item ms-2">
                                <a class="nav-link" href="{{ path('images_app_blog_images_index') }}">Partage d'images</a>
                            </li>
                            <li class="nav-item ms-2">
                                <a class="nav-link" href="{{ path('articles_app_articles') }}">Partage d'articles</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        
            <div class="navbar-nav col-6 col-md-3 text-center">
                <ul class="nav w-100 flex-row flex-md-column">
                    {% for role in app.user.roles %}
                        {% if role == "ROLE_ADMIN" %}
                            <li class="nav-item">
                                <a class="nav-link text-danger border border-danger rounded-pill" href="{{ path('admin_users_index') }}">Administration du forum</a>
                            </li>
                        {% endif %}
                    {% endfor %}

                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('profile_index') }}">Mon compte</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Me déconnecter</a>
                        </li>
                        <li class="nav-item">
                            Compte : {{ app.user.nickname }}
                        </li>
                    {% else %}
                        Aucun utilisateur connecté
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    
</header>