<header>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <div class="row col-12 col-md-3 text-center">
                <div class="border">
                    <p class="dateNow">{{ "now"|date('d M Y, H : i', 'Europe/Paris') }}</p>
                    <a href="{{ path('main') }}">
                        <img src=" {{ asset('assets/icons/globe.ico') }}" alt="Logo site" class="logo">
                        <p class="mt-1">Page d'accueil du site</p>
                    </a>
                </div>
            </div>

            <div class="col-12 col-md-6 text-center">
                <div  class="mt-2">
                    <h1 class="siteTitle">Réseau social</h1>
                    <p>Bienvenue sur la partie privée notre réseau social</p>
                </div>

                <div class="navbar-nav">
                    <ul class="nav w-100 justify-content-center flex-column flex-md-row">
                        {% if app.user %}
                            {% if app.user.isEnabled %}
                                <li class="nav-item ms-2">
                                    <a class="nav-link" href="{{ path('forum_index') }}">Retour à l'accueil du forum</a>
                                </li>
                                <li class="nav-item ms-2">
                                    <a class="nav-link" href="{{ path('images_app_blog_images_index') }}">Partage d'images</a>
                                </li>
                                <li class="nav-item ms-2">
                                    <a class="nav-link" href="{{ path('articles_app_articles') }}">Partage d'articles</a>
                                </li>
                            {% endif %}
                        {% endif %}
                        
                    </ul>
                </div>
            </div>
        
            <div class="navbar-nav col-12 col-md-3 text-center">
                <ul class="nav w-100 flex-column justify-content-center">
                    
                        {% if is_granted ('ROLE_ADMIN') %} <!---->
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-danger rounded-pill adminbtn" href="{{ path('admin_index') }}">Administration du forum</a>
                            </li>
                        {% elseif is_granted ('ROLE_MODO') %}
                            <li>
                                <a class="nav-link btn btn-outline-info rounded-pill " href="{{ path('modo_index') }}">Modération du forum</a>
                            </li>
                        {% endif %}
                    
                    {% if app.user %}
                        {% if app.user.isEnabled %}
                            <li class="nav-item">
                                <a class="nav-link btn" href="{{ path('profile_index') }}">Mon compte</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-warning rounded-pill" href="{{ path('app_logout') }}">Me déconnecter</a>
                            </li>
                            <li class="nav-item mt-3">
                                Compte : {{ app.user.nickname }}
                            </li>
                        {% else %}
                            Aucun utilisateur connecté
                        {% endif %}
                    {% endif %}
                    
                </ul>
            </div>
        </div>
    </nav>
</header>