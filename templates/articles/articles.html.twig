{% extends "base.html.twig" %}


{% block title %}Forum Articles{% endblock %}

{% block body %} 

    {% include "_parts/_forumHeader.html.twig" %}

    <section class="container">
        <h1>Forum articles</h1>

        <h2>Liste tes articles existants</h2>

        <p>
            <ul>
                {% for article in articles %}
                    <a href="{{ path('articles_app_article_show', {'id': article.id}) }}"><li>{{ article.title }}</li></a>
                {% else %}
                    <p>Pas d'article trouv√©.</p>
                {% endfor %}  
            </ul>
        </p>

        <p>
            <a href="{{ path('articles_app_article_new') }}">
                <button class='btn btn-success btn-lg'>
                    Enregistrer un nouvel article
                </button>
            </a>
        </p>
    </section>
    
{% endblock %}

