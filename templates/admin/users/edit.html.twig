{% extends "base.html.twig" %}

{% block title %}Admi - Modification d'un utilisateur {% endblock title %}

{% block body %}

    {% include "_parts/_forumHeader.html.twig" %}

    <main class="container">
        <h2 class="mt-3">Modifier un utilisateur</h2>

        <article class="mt-3 p-3 w-75 m-auto card">
            {{ form_start(form) }}
                {{ form_row(form.nickname) }}
                <div class="mt-3 p-2 border">
                    {{ form_row(form.roles) }}
                </div>
                <div class="mt-3 p-2 border">
                    {{ form_row(form.email) }}
                </div>
                <div class="mt-3 p-2 border">
                    {{ form_row(form.isEnabled) }}
                </div>
                <div class="mt-3 d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary mt-3 btn-lg">Modifier l'utilisateur</button>
                </div>
            {{ form_end(form) }}
        </article>

        <p class="m-3 d-flex justify-content-end">
            <a href="{{ path('admin_index') }}" class="btn btn-warning">Retour au panneau de mod√©ration</a>
        </p>
    </main>

    <script src="{{ asset('assets/js/scriptsUsers.js') }}"></script>

{% endblock %} 
