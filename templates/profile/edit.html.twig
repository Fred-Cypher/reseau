{% extends 'base.html.twig' %}

{% block title %} Modification du profil {% endblock %}

{% block body %}
    {% include '_parts/_forumHeader.html.twig' %}

    <main class="container h-100">
        <div class="mt-3 text-center">
            <span class="backgroundTitle h2 px-3 rounded">Modifier mon profil</span>
        </div>

        <section class="mt-3">
            <div class="card ms-3">
                <div class="card-body">
                    <p class="card-title h5">Ce que je peux modifier</p>
                    <p class="card-text text-center">
                        <a href="{{ path('profile_edit_password', {id: app.user.id } )}}" class="btn btnSend m-5">Modifier mon mot de passe</a>
                        <a href="{{ path('profile_edit_email', {id: app.user.id } )}}" class="btn btnMail m-5">Modifier mon adresse email</a>
                    </p>
                    <p class="card-text">
                        
                    </p>
                </div>
            </div>

            <div class="card col-md-5 ms-3 mt-2">
                <div class="card-body d-flex row">
                    <p class="card-title h5 mb-3">Suppression du compte</p>
                    <p class="card-text">
                        En cliquant sur ce bouton, vous supprimerez d√©finitivement votre compte.
                    <p class="card-text text-center d-flex align-items-end justify-content-center mt-2">
                        {{ include('profile/_delete_form.html.twig') }}
                    </p>
                </div>
            </div>
        </section>

        <div class="mt-5">
            <a href="{{ path('profile_index') }}" class="btn btnReturn">Retour au profil</a>
        </div>    
    </main>

    {% include "_parts/_footer.html.twig" %}

{% endblock %}