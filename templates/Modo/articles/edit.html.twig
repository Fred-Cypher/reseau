{% extends 'base.html.twig' %} 

{% block title %}Modérateur - Modification d'un article{% endblock %}

{% block body %}

    {% include "_parts/_forumHeader.html.twig" %}

    <main class="container">
        <h2 class="mt-3">Modifier un article</h2>
        
        <section class="mt-2 col-12 col-md-8 p-3 m-auto card">
            {{ form_start(form) }}
                <div class="mt-2 p-2">
                    {{ form_row(form.title) }}
                </div>
                <div class="mt-2 p-2">
                    {{ form_row(form.summary) }}
                </div>
                <div class="mt-2 p-2">
                    {{ form_row(form.content) }}
                </div>
                <div class="mt-2 p-2">
                    {{ form_row(form.isVisible) }}
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btnSend mt-3 btn-lg">Modifier l'article</button>
                </div>
            {{ form_end(form) }}
        </section>
        
        <div class="backTo">
            <p class="m-3 d-flex justify-content-end">
                <a href="{{ path('articles_app_articles') }}" class="btn btnReturn me-3">Aller à la liste d'articles du forum</a>
                <a href="{{ path('modo_index') }}" class="btn btn-warning">Retour au panneau de modération</a>
            </p>
        </div>
    </main>

    {% include "_parts/_footer.html.twig" %}

    <script src="{{ asset('assets/js/scriptsArticles.js') }}"></script>

{% endblock %}