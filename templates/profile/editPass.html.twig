{% extends 'base.html.twig' %}

{% block title %} Modification du profil {% endblock %}

{% block body %}
    {% include '_parts/_forumHeader.html.twig' %}

    <main class="container h-100">
        <h2 class="mt-32 mb-3 bg-warning p-4">Modifier mon mot de passe</h2>
            <section class="m-2 card">
            <div class="card-body">
                {{ form_start(form) }}
                    {{ form_row(form.plainPassword) }}
                    {{ form_row(form.newPassword) }}
                    <button type="submit" class="btn btn-primary mt-4 btn-lg">Modifier le mot de passe</button>
                {{ form_end(form) }} 
            </div>
        </section> 

        <div class="mt-4">
            <a href="{{ path('profile_index') }}" class="btn btn-primary">Retour au profil</a>
        </div>   
    </main>

    {% include "_parts/_footer.html.twig" %}

{% endblock %}