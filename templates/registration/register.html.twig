{% extends 'base.html.twig' %}



{% block title %}Inscription{% endblock %}

{% block body %}

    {% include "_parts/_homeHeader.html.twig" %}

    <section class="container">
        <div class="row">
            <div class="col">
                <h1>Inscription</h1>

                    {{ form_start(registrationForm) }}
                        <fieldset class="mt-3">
                            <legend>Mon identité <small>(ces renseignements n'apparaîtront pas sur le réseau)</small></legend>
                                {{ form_row(registrationForm.firstname) }}
                                {{ form_row(registrationForm.lastname) }}
                                {{ form_row(registrationForm.email) }}
                        </fieldset>
                        <fieldset class="mt-3">
                            <legend>Mon identité sur le réseau social</legend>
                                {{ form_row(registrationForm.nickname) }}
                                {{ form_row(registrationForm.plainPassword) }}
                        </fieldset>
                        <fieldset class="mt-3">
                            <legend>Enregistrement</legend>
                            {{ form_row(registrationForm.RGPDConsent, {label: 'J\'accepte les conditions RGPD : '}) }}
                            <button type="submit" class="btn btn-primary mt-3 btn-lg">M'enregistrer</button>
                            <a href="{{ path('app_login') }}" class="btn btn-outline-dark mt-3 ms-5">Déjà enregistré ? </a>
                        </fieldset>

                    {{ form_end(registrationForm) }}


            </div>
        </div>
    </section>
    
{% endblock %}
